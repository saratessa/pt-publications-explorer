if ("publicationtype" %in% names(df))
df$publicationtype <- ifelse(is.na(df$publicationtype) | df$publicationtype == "", "Unspecified", df$publicationtype)
df |> mutate(keyword_field = paste(title, focusarea, sep = " | "))
}
